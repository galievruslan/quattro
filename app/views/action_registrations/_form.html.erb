<% content_for :stylesheets do %>
  <%= stylesheet_link_tag 'action_registrations' %>
<% end %>
<% content_for :javascripts do %>
  <%= javascript_include_tag 'action_registrations' %>
<% end %>
<%= form_tag('/action_registrations') do %>

  <div class="field">
    <%= hidden_field_tag 'brand_id' %>
    <div id="brands" class="wrapper-dropdown-3" tabindex="1">      
      <span>Brand</span>      
      <ul class="dropdown">
        <% @brands = Brand.all %>
        <% @brands.each do |brand| %>
          <li value=<%= brand.id %>><a href="#"><i class="icon-large"></i><%= brand.name %></a></li>          
        <% end %>
      </ul>
    </div>
  </div>
  <div class="field">
    <%= hidden_field_tag 'model_id' %>
    <div id="modelsPlaceHolder" class="field">
    </div>
  </div>
  <div class="field">
    <%= hidden_field_tag 'body_id' %>
    <div id="bodiesPlaceHolder" class="field">
    </div>
  </div>
  <div class="field">
    <%= label_tag 'year', 'Year' %>
    <%= number_field_tag 'year', nil, :in => 1980...2014%>
  </div>
  <div class="field">
    <%= label_tag 'email', 'EMail' %>
    <%= email_field_tag 'email'%>
  </div>
  <div class="field">
    <%= label_tag 'phone', 'Phone' %>
    <%= telephone_field_tag 'phone' %>
  </div>
  <%= submit_tag "Register!" %>
<% end %>
<div id="Templates">
  <div id="modelsListTemplate" class="wrapper-dropdown-3" tabindex="1">      
    <span>Models</span>      
    <ul class="dropdown">
    </ul>
  </div>
  <div id="bodiesListTemplate" class="wrapper-dropdown-3" tabindex="1">      
    <span>Bodies</span>      
    <ul class="dropdown">
    </ul>
  </div>
  <li id="listItemTemplate"><a href="#"><i class="icon-large"></i></a></li>
</div>
