<p id="notice"><%= notice %></p>
<h1>Company</h1>
<p>
  <b>Description:</b>
  <%= @company.description %>
</p>
<table class="table table-striped table-hover">
  <thead>
    <tr>
        <th>Contact Type</th>
        <th>Contact</th>
    </tr>
  </thead>
  <tbody>
    <% @company.contacts.each do |contact| %>  
    <tr>
      <td><%= contact.type %></td>
      <td><%= contact.value %></td>
    </tr>
    <%end%>
  </tbody>
</table>
<%= link_to 'Edit', :controller => administration_companies_path, :action => 'edit', :id => @company.id %> |
<%= link_to 'Back', :controller => administration_companies_path, :action => 'show', :id => @company.id %>
