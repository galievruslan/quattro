<p id="notice"><%= notice %></p>

<p>
  <b>Customer name:</b>
  <%= @customer.name %>
</p>
<b>Customer contacts</b><br>

<table class="table table-striped table-hover">
	<thead>
	  <tr>
	    <th>Contact type</th>
	    <th>Contact</th> 
	  </tr>
	<thead>
	<tbody>
	<% @customer.contacts.each do |contact| %>  
	  <tr>
	    <td><%= contact.type %></td>
	    <td><%= contact.value %></td>
	  </tr>  
	<% end %>
	<tbody>
</table>

<b>Vehicles</b><br>
  <table class="table table-striped table-hover">
    <thead>
      <tr>
          <th>Brand</th>
          <th>Model</th>
          <th>Body</th>
          <th>Year</th>
      </tr>
    </thead>
    <tbody>  
      <tr>
        <td><%=@vehicle.model.brand.name%></td>
        <td><%=@vehicle.model.name%></td>
        <td><%=@vehicle.body.name%></td>
        <td><%=@vehicle.year%></td>
      </tr>
    </tbody>
  </table>


<%= link_to 'Edit', :controller => administration_action_registrations_path, :action => 'edit', :id => @action_registration.id %> |
